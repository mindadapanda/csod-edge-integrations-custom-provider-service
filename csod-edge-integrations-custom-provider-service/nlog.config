<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <!-- Load the ASP.NET Core plugin -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>
  <variable name="name" value="bgcheck-fadv"/>
  <variable name="baseDir" value="C:\Logs"/>
  <targets>
    <target xsi:type="File" name="logfile" fileName="${baseDir}\${name}-${shortdate}.log"
            layout="${longdate}|${event-properties:item=EventId.Id}|${logger}|${uppercase:${level}}|${message} ${exception}" />

    <target xsi:type="WebService"
          name="network"
          url="http://54.153.95.129:8080/${name}/log"
          protocol='JsonPost'
          encoding='UTF-8'
          includeBOM='false'>
      <parameter name='message' layout='${longdate}|${event-properties:item=EventId.Id}|${logger}|${uppercase:${level}}|${message} ${exception}${newline}'/>
    </target>
  </targets>

  <rules>
    <logger name="*" minlevel="Info" writeTo="logfile" />
    <logger name="*" minlevel="Info" writeTo="network" />
  </rules>
</nlog>